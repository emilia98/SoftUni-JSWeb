<div class="container body-content">
    <div class="row">
      {{#each articles}}
        <div class="col-md-6">
            <article>
                <header>
                    <h2>{{this.title}}</h2>
                </header>

                <p>{{this.content}}
                </p>

                <small class="author">
                    {{this.authorId.fullName}}
                </small>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/article/details/{{this._id}}">Read more &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
        {{else}}
          <div class="col-md-12">
            <h2>No articles to show!</h2>
          </div>
        {{/each}}
    </div>
</div>
